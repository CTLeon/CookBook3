<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.DishEdit">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="276dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/dishPhoto" tools:layout_editor_absoluteY="2dp" tools:layout_editor_absoluteX="0dp"/>
    <EditText
            android:text="TextView"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dishPhoto"/>
    <EditText
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:editable="true"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSave" android:visibility="visible"
            tools:layout_editor_absoluteY="2dp" tools:layout_editor_absoluteX="323dp"/>

</android.support.constraint.ConstraintLayout>